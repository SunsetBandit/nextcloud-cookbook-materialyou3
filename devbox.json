{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/0.10.1/.schema/devbox.schema.json",
  "packages": [
    "ruby@latest",
    "jdk@17",
    "nodejs@latest"
  ],
  "shell": {
    "scripts": {
      "app:init": [
        "bundler install"
      ],
      "app:lint": [
        "bundler exec fastlane lint"
      ],
      "app:ktlint": [
        "bundler exec fastlane ktlint"
      ],
      "app:deploy": [
        "bundler exec fastlane deploy"
      ],
      "docs:init": [
        "npm install"
      ],
      "docs:dev": [
        "npm run docs:dev"
      ]
    }
  }
}
